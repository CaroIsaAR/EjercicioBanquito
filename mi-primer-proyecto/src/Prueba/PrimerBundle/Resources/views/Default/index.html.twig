{% extends 'base.html.twig' %}

{% block formulario %}
	<div class="container">
		<br><br>
		<div class="row">
			<div class="col  s12 m12">
				<div class="row">
					<div class="col s12 m12">
						<div class="card">
							<div class="card-image">
								<img src="images/sample-1.jpg">
								<span class="card-title"></span>
							</div>
							<div class="card-content">
								<h5 class="center">INGRESA TU CUENTA</h5>
							</div>
							<div class="card-action">
								<div class="row">
									<div class="col m9"></div>
									<div class="col m3">
										<button class="btn waves-effect waves-light orange" type="submit" name="action">
											Acceder
											<i class="material-icons right">send</i>
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="card">
					<div class="card-content center">
						<h3 class="orange-text text-darken-4">Bienvenido! </h3>search
						<h4>{{ datos['data'][0].cliente }}</h4>
					</div>
					<div class="card-tabs ">
						<br>
						<h5 class="orange-text text-darken-3 center">ACCIONES</h5>
						<br> <br> <br>
						<ul class="tabs tabs-fixed-width">
							<li class="tab">
								<a href="#movimientos" class="orange-text darken-4">
									<i class="material-icons">assignment</i>
									 Movimientos
								</a>
							</li>
							<li class="tab">
								<a href="#abonar" class="orange-text darken-4">
									<i class="material-icons">arrow_downward</i>
									Abonar
								</a>
							</li>
							<li class="tab">
								<a href="#retirar" class="orange-text darken-4">
									<i class="material-icons">arrow_upward</i>
									Retirar
								</a>
							</li>
						</ul>
					</div>
					<div class="card-content grey lighten-4">
						<div class="row">
							<div class="col s6">
								<h4>Saldo:<i class="small material-icons prefix">attach_money</i>  {{ datos['data'][0].SaldoTotal }}</h4>
								<div id="noCuenta" >No. Cuenta:  {{ datos['data'][0].nocuenta }}</div>
								<br> <br>
							</div>
						</div>
						<div class="row" id="retirar">
							<form class="col s12">
								<div class="row">
									<div class="input-field col s6">
										<i class="material-icons prefix orange-text">monetization_on</i>
										<input id="cantidad" type="number" class="validate">
										<label for="cantidad">Monto: </label>
									</div>
									<div class="input-field col s6 center">
										<button class="btn waves-effect waves-light orange" type="submit" name="action">
											Retirar
											<i class="material-icons right">arrow_upward</i>
										</button>
									</div>
								</div>
							</form>
						</div>

						<div class="row" id="abonar">
							<form class="col s12">
									<div class="input-field col s6">
										<i class="material-icons prefix orange-text">monetization_on</i>
										<input id="cantidad" type="number" class="validate">
										<label for="cantidad">Monto</label>
									</div>
									<div class="input-field col s6 center">
										<button class="btn waves-effect waves-light orange" type="submit" name="action">
											Abonar
											<i class="material-icons right">arrow_downward</i>
										</button>
									</div>
							</form>
						</div>

						<div class="row" id="movimientos">
							<div id="tablaMovs">
								<table id="normalTable" class="table table-striped table-hover table-bordered">
									<thead class="table-primary">
									<tr>
										<th>No. Movimiento</th>
										<th>Tipo</th>
										<th>Fecha</th>
										<th>Importe</th>
										<th>Sucursal</th>
									</tr>
									</thead>
									<tbody>
										{% for dato in datos['data'] %}
											<tr>
												<td>{{ dato.idmov }}</td>
												<td>{{ dato.tipomov }}</td>
												<td>{{ dato.fecha }}</td>
												<td>{{ dato.importe }}</td>
												<td>{{ dato.nombre }}</td>

											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}